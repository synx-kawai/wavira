[flake8]
max-line-length = 100
exclude =
    .git,
    __pycache__,
    .eggs,
    *.egg,
    build,
    dist,
    .venv,
    venv,
    env,
    .mypy_cache,
    .pytest_cache,
    outputs,
    data,
    checkpoints

# Ignore specific errors
ignore =
    # line too long (handled by black)
    E501,
    # whitespace before ':' (conflicts with black)
    E203,
    # line break before binary operator (conflicts with black)
    W503,
    # missing whitespace around arithmetic operator
    E226

# Per-file ignores
per-file-ignores =
    # imported but unused in __init__.py
    __init__.py:F401,F403
    # tests can have long lines and unused imports
    tests/*:E501,F401

# Complexity
max-complexity = 15

# Output format
format = default
show-source = true
statistics = true
count = true
